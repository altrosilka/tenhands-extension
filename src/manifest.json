{
  "background": {
    "page": "background.html"
  },
  "description": "Размещайте контент в социальные сети за пару кликов",
  "icons": {
    "128": "icons/128.png",
    "16": "icons/16.png",
    "48": "@@extesionIcon"
  },
  "browser_action": {
    "default_title": "Поделиться материалами с данной страницы",
    "default_icon": "@@extesionIcon"
  },  
  "manifest_version": 2,  
  "homepage_url": "http://10hands.io",
  "name": "Десять Рук",
  "permissions": ["contextMenus", "tabs", "activeTab", "storage","pageCapture", "http://*/*", "https://*/*"],
  "web_accessible_resources": [
    "pages/createPost.html", 
    "pages/afterInstall.html",
    "pages/authVk.html",
    "pack/page.css"
  ],
  "content_scripts": [{
    "matches": ["http://*/*"],
    "css": ["pack/page.css"]
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.vk.com https://*.google.com; object-src 'self'",
  "version": "@@version"
}
