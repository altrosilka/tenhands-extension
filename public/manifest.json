{
  "background": {
    "page": "background.html"
  },
  "description": "Размещайте контент в социальные сети за пару кликов",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_title": "Print this page",
    "default_icon": "icons/48.png"
  },
  "manifest_version": 2,
  "homepage_url": "http://10hands.io",
  "name": "Десять Рук",
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "pages/createPost.html",
    "pages/afterInstall.html",
    "pages/authVk.html",
    "pack/page.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "css": [
        "pack/page.css"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.vk.com https://*.google.com; object-src 'self'",
  "version": "0.1.4"
}
